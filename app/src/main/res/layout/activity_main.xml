<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout"
        tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shiftLogLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/shift_log"
            android:textAllCaps="true"
            android:textColor="@color/colorTextThree"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/Save_Button"
            android:layout_width="106dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btnpoa"
            android:background="@drawable/selector_button"
            android:text="@string/save"
            android:textColor="@color/colorTextTwo"
            app:layout_constraintRight_toRightOf="parent" />


        <CheckBox
            android:id="@+id/vehicleUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nightOut"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:text="@string/will_you_be_operating_a_vehicle"
            android:textColorLink="@color/buttonColour" />


        <CheckBox
            android:id="@+id/nightOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBreaks"
            android:layout_marginTop="4dp"
            android:text="@string/night_shift"
            android:textSize="16dp"
            android:textColorLink="@color/buttonColour" />

            <Button
            android:id="@+id/btnStartDatePicker"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/AgencyInput"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/selector_button"
            android:text="@string/pick_a_start_date" />

        <Button
            android:id="@+id/btnStartTimePicker"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/AgencyInput"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/selector_button"
            android:text="@string/pick_a_start_time" />

        <Button
            android:id="@+id/btnEndDatePicker"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/btnStartTimePicker"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_button"
            android:text="@string/pick_an_end_date" />

        <Button
            android:id="@+id/btnEndTimePicker"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/btnStartTimePicker"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_button"
            android:text="@string/pick_an_end_time" />

        <TextView
            android:id="@+id/CompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company"
            android:textSize="14sp"
            android:textColor="@color/colorTextThree"
            app:layout_constraintBottom_toBottomOf="@id/shiftLogLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop= "40dp"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/companyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CompanyName"
            android:layout_marginTop="4dp"
            />


        <TextView
            android:id="@+id/AgencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agency"
            android:textSize="14sp"
            android:textColor="@color/colorTextThree"
            android:layout_below="@id/companyInput"
            app:layout_constraintBottom_toBottomOf="@id/companyInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/AgencyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AgencyName"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnBreaks"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/btnEndTimePicker"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_button"
            android:text="@string/total_break_time" />

        <Button
            android:id="@+id/btnpoa"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/RegInput"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:visibility="invisible"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_button"
            android:text="Total POA" />

        <TextView
            android:id="@+id/Registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration_number"
            android:textSize="14sp"
            android:textColor="@color/colorTextThree"
            android:layout_below="@id/vehicleUse"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/RegInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:visibility="invisible"
            android:layout_below="@id/Registration"
            android:layout_marginTop="1dp"
           />

            <CheckBox
                android:id="@+id/useCompanyno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shiftLogLabel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"

            />

            <CheckBox
                android:id="@+id/useAgencyyno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/companyInput"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"

                />

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
