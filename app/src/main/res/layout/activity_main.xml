<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/Save_Button"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="14dp"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="@color/colorTextTwo"
        app:layout_constraintRight_toRightOf="parent" />

    <CheckBox
        android:id="@+id/vehicleUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEndTimePicker"
        android:layout_marginTop="14dp"
        android:text="Do you own and can drive a vehicle?"
        android:textColorLink="@color/buttonColour" />

    <CheckBox
        android:id="@+id/nightout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vehicleUse"
        android:layout_marginTop="14dp"
        android:text="Are you willing to spend nights out"
        android:textColorLink="@color/buttonColour" />

    <Button
        android:id="@+id/btnStartDatePicker"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pick a Start Date" />

    <Button
        android:id="@+id/btnStartTimePicker"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnStartDatePicker"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Pick a Start Time" />

    <Button
        android:id="@+id/btnEndDatePicker"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnStartTimePicker"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:text="Pick an End Date" />

    <Button
        android:id="@+id/btnEndTimePicker"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEndDatePicker"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Pick an End Time" />


</RelativeLayout>